<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <!-- Action bar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Splash screen -->
    <style name="TextAppearance.Splash.title" parent="TextAppearance.ubuntuBold">
        <item name="android:textSize">38.0sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Main screen -->
    <style name="TextAppearance.Main.tabs" parent="TextAppearance.ubuntuBold">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <!-- Player screen -->
    <style name="VideoPlayerTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Fonts -->
    <style name="TextAppearance.ubuntuBold" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

</resources>
